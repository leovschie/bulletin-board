<body>

    <section class="form">
        <h1>Create A Post</h1>
        <form action="/addPost" method="POST">
            <input type="text" placeholder="Title" name="newTitle">
            <br><br>
            <textarea action="/addPost" rows=10 cols=50 placeholder="Message" maxlength=250 name="newBody"></textarea>
            <br><br>
            <input type="submit" value="Post Message">
        </form>
    </section>
</body>

