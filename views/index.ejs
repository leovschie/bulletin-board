    <a href="/">Create Post</a>
    <a href="/board">Banana Board</a>


</nav>

<body>
    <header>
        <h1>Create Post</h1>
    </header>
    <section class="form">

        <form action="/addPost" method="POST">
            <input class="titleform" type="text" placeholder="Title" name="newTitle">
            <br><br>
            <textarea action="/addPost" rows=10 cols=50 placeholder="Message" maxlength=250 name="newBody"></textarea>
            <br><br>
            <input class="button" type="submit" value="Post Message">
        </form>
    </section>
</body>

</html>